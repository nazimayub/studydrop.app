
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    // Users can read their own document
    // Users can update their own profile data
    // Public user profiles are readable by anyone
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
      
      // NOTIFICATIONS
      // Users can read and write to their own notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // VOTES
      // Users can read and write their own votes
      match /votes/{voteId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // NOTES
    // Public notes are readable by anyone
    // Users can create, update, and delete their own notes
    match /notes/{noteId} {
      allow read: if resource.data.isPublic == true || request.auth.uid == resource.data.authorId;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.authorId;

      // NOTE COMMENTS
      // Anyone can read comments
      // Authenticated users can post comments
      // Authors can delete their own comments
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth.uid == resource.data.authorId;
        allow delete: if request.auth.uid == resource.data.authorId;
      }
    }

    // QUESTIONS
    // All questions are readable by anyone
    // Authenticated users can create questions
    // Authors can update and delete their own questions
    match /questions/{questionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
      
      // ANSWERS
      // Anyone can read answers
      // Authenticated users can post answers
      // Authors can update and delete their own answers
      match /answers/{answerId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.authorId;
      }
    }
  }
}
