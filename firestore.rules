
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read public profile data, but only write to their own document.
    match /users/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Notes can be read if public. Only the author can create, update, or delete their own notes.
    match /notes/{noteId} {
      allow read: if resource.data.isPublic == true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    // Questions can be read by anyone. Authenticated users can create questions.
    // The author can update their question. Answers have their own rules.
    match /questions/{questionId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.authorId == request.auth.uid;
      
      // Answers can be read by anyone. Authenticated users can post answers.
      // The author of the answer can update their own answer.
      match /answers/{answerId} {
        allow read;
        allow create: if request.auth != null;
        allow update: if request.auth != null && resource.data.authorId == request.auth.uid;
      }
    }
  }
}
